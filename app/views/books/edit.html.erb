<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<div class="form">
<div class="field">
<label>Title</label>
<div class="text"><%= f.text_field :title %></div>
</div>

<div class="field">
<label>Body</label>
<div class="text"><%= f.text_area :body %></div>
</div>
    
<div class="actions"><%= f.submit 'Update Book' %></div>

<% end %>

<a>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path  %>
</a>